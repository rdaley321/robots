<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>User directory</title>
  <link rel='stylesheet' href='main.css'>
</head>

<body>
  <header>
    <a href="http://0.0.0.0:3000/">All Users</a>
    <a href="http://0.0.0.0:3000/lfw">Currently Looking For Work</a>
    <a href="http://0.0.0.0:3000/emp">Currently Employed</a>
  </header>
  <div class="body2">
    {{#robots}}
      <div class="top">
        <div class="top-left">
          <img src="{{avatar}}" alt="">
        </div>
        <div class="top-right">
          <h1>{{name}}</h1>
          {{#address.city}}
            {{#job}}
              <h5>{{address.city}}, {{address.country}} | {{job}}, {{company}}</h5>
            {{/job}}
            {{^job}}
            <h5>{{address.city}}, {{address.country}} | <span class="available">Available for hire</span></h5>
            {{/job}}
          {{/address.city}}
          {{^address.city}}
          {{#job}}
            <h5>{{address.country}} | {{job}}, {{company}}</h5>
          {{/job}}
          {{^job}}
          <h5>{{address.country}} | <span class="available">Available for hire</span></h5>
          {{/job}}
          {{/address.city}}
          <h5>{{email}} | {{phone}}</h5>
        </div>
      </div>
      <div class="education">
        {{#university}}
          <h5 class="ed1">Education</h5>
        {{/university}}
        {{^university}}
        {{/university}}
        {{#university}}
          <h5 class="ed2">{{university}}</h5>
        {{/university}}
        {{^university}}
        {{/university}}
      </div>
      <div class="skills">
        <h5 class="ed1">Skills</h5>
        <div class="sk2">
          {{#skills}}
            <h5 class="indskills">{{.}}</h5>
          {{/skills}}
        </div>
      </div>
    {{/robots}}
  </div>
</body>

</html>
